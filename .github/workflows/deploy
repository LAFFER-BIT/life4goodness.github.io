name: Deploy to GitHub Pages

on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Replace secrets
        run: |
          sed -i 's/__API_KEY__/${{ secrets.FIREBASE_API_KEY }}/g' config.js
          sed -i 's/__PROJECT_ID__/${{ secrets.FIREBASE_PROJECT_ID }}/g' config.js
          sed -i 's/__APP_ID__/${{ secrets.FIREBASE_APP_ID }}/g' config.js
          sed -i 's/__MSG_SENDER_ID__/${{ secrets.FIREBASE_MSG_SENDER_ID }}/g' config.js
          sed -i 's/fitness-management4p.firebaseapp.com/${{ secrets.FIREBASE_AUTH_DOMAIN }}/g' config.js
          sed -i 's/fitness-management4p.firebasestorage.app/${{ secrets.FIREBASE_STORAGE_BUCKET }}/g' config.js
      
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./
